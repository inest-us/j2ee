<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="message" class="us.inest.springbyexample.message.DefaultMessage"></bean>
	
	<bean id="constructorMessage" class="us.inest.springbyexample.message.ConstructorMessage">
		<constructor-arg value="Spring is fun." />
	</bean>
	
	<bean id="setterMessage" class="us.inest.springbyexample.message.SetterMessage">
		<property name="message" value="Spring is fun." />
	</bean>
</beans>